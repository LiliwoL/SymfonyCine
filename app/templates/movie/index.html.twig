    {% extends 'base.html.twig' %}

{% block title %}Discover movies{% endblock %}

{% block body %}

<div class="example-wrapper">

    <h1>Liste de films à découvrir</h1>
    {%  for movie in movies %}
        {{  dump(movie) }}
        <div class="card" style="width: 18rem;">
            <img src="{{ urlImageMoviePrefix }}/{{ movie.poster_path }}" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{ movie.title }}</h5>
                <p class="card-text">{{ movie.overview }}</p>
                <a href="{{ path('movie_show', {'id': movie.id}) }}" class="btn btn-primary">Voir le détail</a>
            </div>
    {% endfor %}

</div>
{% endblock %}
